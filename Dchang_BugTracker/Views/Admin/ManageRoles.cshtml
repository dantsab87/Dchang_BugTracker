@model IEnumerable<Dchang_BugTracker.Models.ManageRolesViewModel>
@{
    ViewBag.Title = "Manage Roles";
}

<style>
    .Wide {
        width: 100%;
        height: 200px;
    }

    .sWide {
        width: 100%;
    }

    .ticket-top {
        background-color: #1f283e;
        background-image: linear-gradient(135deg, #1f283e, #556385);
        color: #FFFFFF;
        padding: 8px 8px 8px 8px;
    }

    .ticket_bg {
        background-image: url('../../Images/ticket_bg.jpg');
        background-repeat: no-repeat;
        background-position: top right;
        background-color: #FFFFFF;
    }

    .head1 {
        color: #FFFFFF;
        text-shadow: 1px 1px 3px black;
        font-size: 14px;
        font-weight:700;

    }

    .subhead1 {
        margin: -5px 0px 3px 8px;
        color: #999999;
        font-size: 11px;
        text-shadow: 1px 1px 3px black;
        text-transform: uppercase;
    }

    .btn-mrgn {
        margin:0;
    }

    .btn:hover {
        background-color: #808caa;
        background-image: linear-gradient(145deg, #c6ccdb, #808caa);
        text-shadow: 1px 1px 3px black;
        border-color: #1f283e;
    }

    .inputbox {
        margin: 0px;
        padding: 5px;
        font-size: 10pt;
        background-color: rgba(242, 242, 242, 0.75);
    }

    .user-img {
        border-radius: 11px;
        border: solid #FFFFFF 3px;
        box-shadow: 3px 3px 2px #556385;
        width: 40px;
        height: 40px;
        margin: 0px 10px 0px 0px;
    }
</style>

<div class="page-header">
    <h4 class="page-title">@ViewBag.Title</h4>
</div>

<div class="row">
    <div class="col">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="card">
                    <div class="ticket-top">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col head1">Users in the Database</div>
                                </div>
                                <div class="row">
                                    <div class="col subhead1">Step 1: Select user(s) below</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body ticket_bg">
                        @Html.ListBox("UserIds", null, new { @class = "Wide inputbox" })
                    </div>
                </div>

                <div class="card">
                    <div class="ticket-top">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col head1">Role</div>
                                </div>
                                <div class="row">
                                    <div class="col subhead1">Step 2: Assign a role below</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body ticket_bg">
                        <div class="row">
                            <div class="col">
                                @Html.DropDownList("Role", null, "--Select Role--", new { @class = "sWide inputbox" })
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-3"></div>
                    <div class="col">
                        <button type="submit" class="btn btn-sm btn-dark btn-mrgn btn-block">Submit</button>
                    </div>
                    <div class="col-3"></div>
                </div>
            }

        </div>


    <div class="col">



        <div class="card">
            <div class="ticket-top">
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col head1">Directory</div>
                        </div>
                        <div class="row">
                            <div class="col subhead1">List of all users and their role</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body ticket_bg">

                <table class="table table-hover table-head-bg-primary table-striped Dtable">
                    <thead>
                        <tr>
                            <th scope="col" width="65%">
                                @Html.DisplayName("Users")
                            </th>
                            <th scope="col">
                                @Html.DisplayName("Role")
                            </th>
                        </tr>
                    </thead>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="row">
                                    <div class="col-xs-1"><img src="@Html.DisplayFor(model => user.AvatarPath)" class="user-img"></div>
                                    <div class="col">
                                        <div class="row">@Html.DisplayFor(model => user.UserName)</div>
                                        <div class="row"><small>@Html.DisplayFor(model => user.Email)</small></div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(model => user.RoleName)
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>

    </div>
</div>


