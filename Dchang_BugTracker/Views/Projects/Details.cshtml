        box-shadow: 0 .25rem 1rem rgba(0,0,0,.15) !important
    }

    .tk_sidebg {
        background-image: url('../../Images/side_bg.jpg');
        background-repeat: no-repeat;
        width: 30px;
        margin: 0;
        padding: 0;
    }

    .ticket_bg {
        background-image: url('../../Images/proj_butterfly_bg.jpg');
