                            <div class="row between">
                                <div class="col-xs">
                                    @foreach (var item in Model.Users)
                                    {
                                        if (item.MyRole.Contains("Developer") || item.MyRole.Contains("Demo Developer"))
                                        {
                                            <span>
                                                <img src="@Html.DisplayFor(model => item.AvatarPath)" class="ticket-assigned-img" />
