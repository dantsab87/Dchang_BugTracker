        background-position: bottom right;
        background-color: #FFFFFF;
    }

    .create_btn {
        padding: 10px;
        margin: 40px 10px 10px 20px;
        text-align: center;
        width: 80px;
        height: 80px;
    }

    .padded {
        padding: 30px 40px 20px 30px;
    }

    .between {
        padding: 10px 0 0 0;
    }

    .pad-right {
        padding: 0 10px 0 0;
    }

    .pad-bottom {
        padding: 0 0 10px 0;
    }

    .btn-attach, .btn-attach a:hover, .btn-attach a:hover, .btn-attach a:link, .btn-attach a:active, .btn-attach a:visited {
        color: #1f283e;
        font-size: 9pt;
        text-transform: uppercase;
        text-decoration: none;
    }

    .ticket-assigned-img {
        border-radius: 11px;
        border: solid #FFFFFF 3px;
        box-shadow: 3px 3px 2px #556385;
        width: 40px;
        height: 40px;
        margin: 0px 3px 8px 9px;
    }

    .font-role {
        font-size: 9pt;
        font-weight: bold;
        padding-bottom: 0px;
        margin-bottom: -8px;
    }

    .grow {
        transition: all .3s ease-in-out;
    }

    .grow:hover {
        transform: scale(1.2);
    }
    .icon-padding {
        padding: 0 0 5px 0;
    }
    .icon-img{
        width: 16px;
        height: 16px;
    }

    .head1 {
        color: #FFFFFF;
        text-shadow: 1px 1px 3px black;
        font-size: 14px;
        font-weight: 700;
        margin-left: 30px;
    }

    .subhead1 {
        margin: -5px 0px 3px 8px;
        color: #999999;
        font-size: 11px;
        text-shadow: 1px 1px 3px black;
        text-transform: uppercase;
        margin-left: 35px;
    }
</style>

<h6 class="page-title">@ViewBag.Title</h6>


<div class="row">
    <div class="col">
        <div class="container ticket_create ticket_bg">
        <div class="row">
            <div class="col-1 tk_sidebg" style="width:30px"></div>
            <div class="col-11">
                <div class="padded">
                    <div class="row">
                        <div class="col pad-right pad-bottom">
