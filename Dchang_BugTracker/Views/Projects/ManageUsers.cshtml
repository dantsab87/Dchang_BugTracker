@model Dchang_BugTracker.Models.Project
@{
    ViewBag.Title = "Manage Users";
}


<div class="page-header">
    <h4 class="page-title">@Model.Name project</h4>

</div>
<div class="card">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.Hidden("ProjectId", (int)ViewBag.ProjectId)
            <div class="container">
                <div class="row">
                    <div class="col-md-4">Prj Mgr
                        @Html.DropDownList("ProjectManagerId", null, "--select--", new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">Dev
                        @Html.ListBox("Developers", null, new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">Sub
                        @Html.ListBox("Submitters", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        }
        </div>
</div>
