@model Dchang_BugTracker.Models.ResetPasswordViewModel
@using Dchang_BugTracker.Models
@{
    ViewBag.Title = "Reset password";
    Layout = null;
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>BugTracker Login - Please Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Images/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/icon-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/main.css" rel="stylesheet" />
    <link href="~/Content/Login/util.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <style>

        a:hover {
            color: #808caa;
            text-shadow: 1px 1px 1px #c6ccdb;
        }

        body {
            background-color: #c6ccdb;
        }

        .container-login100 {
            background-color: #c6ccdb;
        }

        .center-align {
            text-align: center;
            display: block;
        }


        .login100-form-btn:hover {
            background-color: #808caa;
            background-image: linear-gradient(145deg, #c6ccdb, #808caa);
            text-shadow: 1px 1px 3px black;
            border-color: #1f283e;
        }


        .wrap-login100 {
            box-shadow: 2px 6px 15px 0 rgba(69,65,78,.3);
        }

    </style>

</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-25 p-b-0">

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Code)
                    <span class="login100-form-title p-b-32 text-center">
                        Reset your password.
                    </span>
                    <span class="txt1 p-b-11">
                        Email
                    </span>
                    <div class="wrap-input100 validate-input m-b-36 form-group" data-validate="Email is required">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", name = "Email" })
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", name = "Pass" })
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Confirm Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100", name = "Confirm Pass" })
                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-login100-form-btn m-b-40">
                        <button class="btn login100-form-btn btn-block">
                            Reset
                        </button>
                    </div>

                }

            </div>
        </div>
    </div>



    <!--===============================================================================================-->
    <script src="~/Scripts/Login/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/animsition.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/popper.js"></script>
    <script src="~/Scripts/Login/bootstrap.min.js"></script>
    <script src="~/Scripts/Login/jquery.validate.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/moment.js"></script>
    <script src="~/Scripts/Login/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/main.js"></script>
    <script src="~/Scripts/atlantis.min.js"></script>

</body>
</html>