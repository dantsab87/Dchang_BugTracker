@using Dchang_BugTracker.Models
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>BugTracker Login - Please Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Images/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/icon-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/main.css" rel="stylesheet" />
    <link href="~/Content/Login/util.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <style>
        #log_leftimg {
            z-index: 4;
            position: absolute;
            bottom: 0;
            top: 136px;
            left: -90px;
            right: 0px;
        }

        #log_rightimg {
            width: 100px;
            height: 100px;
            z-index: 5;
            position: absolute;
            bottom: 0;
            top: 330px;
            left: 280px;
            right: 0px;
        }
    </style>

</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-25 p-b-25">
                <img src="~/Images/test.png" id="log_leftimg">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title p-b-32 text-center">
                        Bugtracker Login<BR>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </span>
                    <span class="txt1 p-b-11">
                        Username @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </span>
                    <div class="wrap-input100 validate-input m-b-36 form-group" data-validate="Username is required">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input100", name = "username" })
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Password @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", name = "pass" })
                        <span class="focus-input100"></span>
                    </div>

                    <div class="flex-sb-m w-full p-b-48">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>
                        </div>

                        <div>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account", null, new { @class = "txt1" }) <br /> @Html.ActionLink("Register as a new user", "Register", "Account", null, new { @class = "txt1" })
                            @*<a href="#" class="txt3">
                                    Forgot Password?
                                </a>*@
                        </div>
                    </div>

                    <div class="container-login100-form-btn">

                        <button class="login100-form-btn">
                            Login
                        </button>
                        <img src="~/Images/bug.png" id="log_rightimg">
                    </div>

                }
            </div>

        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Scripts/Login/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/animsition.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/popper.js"></script>
    <script src="~/Scripts/Login/bootstrap.min.js"></script>
    <script src="~/Scripts/Login/jquery.validate.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/moment.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/main.js"></script>
    <script src="~/Scripts/atlantis.min.js"></script>
</body>
</html>
