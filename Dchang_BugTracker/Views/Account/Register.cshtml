@model Dchang_BugTracker.Models.RegisterViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>BugTracker Register</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Images/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/icon-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/Login/main.css" rel="stylesheet" />
    <link href="~/Content/Login/util.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <style>

        a:hover {
            color: #808caa;
            text-shadow: 1px 1px 1px #c6ccdb;
        }

        body {
            background-color: #c6ccdb;
        }

        .container-login100 {
            background-color: #c6ccdb;
        }

        #log_bugimg {
            width: 100px;
            height: 100px;
            z-index: 5;
            position: absolute;
            bottom: 0;
            top: -30px;
            left: 30px;
            right: 0px;
        }


        .center-align {
            text-align: center;
            display: block;
        }


        div.login-hl:hover {
            background-color: #808caa;
            background-image: linear-gradient(285deg, #c6ccdb, #808caa);
            border-radius: 4px;
            text-shadow: 0px 1px 1px #c6ccdb;
        }


        .login100-form-btn:hover {
            background-color: #808caa;
            background-image: linear-gradient(145deg, #c6ccdb, #808caa);
            text-shadow: 1px 1px 3px black;
        }


        .wrap-login100 {
            width: 400px;
            background-color: #fff;
            box-shadow: 2px 6px 15px 0 rgba(69,65,78,.3);
        }

    </style>

</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-35 p-r-35 p-t-20 p-b-0">
                <img src="~/Images/bug.png" id="log_bugimg">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "Multipart/form-data", @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title p-b-32 text-center">
                        Register<br /> <span class="txt3">Create an account</span>
                        @Html.ValidationSummary("", new { @class = "text-danger txt1" })
                    </span>

                    <div class="row">
                        <div class="col">
                            <span class="txt1 p-b-5 p-r-0">
                                First Name
                            </span>
                            <div class="wrap-input100 validate-input m-b-20 form-group" data-validate="First Name is required">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input100", name = "First Name" })
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                        <div class="col">
                            <span class="txt1 p-b-5">
                                Last Name
                            </span>
                            <div class="wrap-input100 validate-input m-b-20 form-group" data-validate="Last Name is required">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input100", name = "Last Name" })
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <span class="txt1 p-b-5">
                                Display Name
                            </span>
                            <div class="wrap-input100 validate-input m-b-20 form-group" data-validate="Display Name is required">
                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control input100", name = "Display Name" })
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                        <div class="col">
                            <span class="txt1 p-b-5">
                                Email
                            </span>
                            <div class="wrap-input100 validate-input m-b-20 form-group" data-validate="Email is required">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input100", name = "Email" })
                                <span class="focus-input100"></span>
                            </div>
                        </div>
                    </div>

                    <span class="txt1 p-b-5">
                        Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-20 form-group" data-validate="Password is required">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input100", name = "Password" })
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-5">
                        Confirm Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-20 form-group" data-validate="Password did not match">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input100", name = "Confirm password" })
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-5">
                        Upload Avatar (*.jpg, .png, .gif)
                    </span>
                    <div class="wrap-input100 validate-input m-b-20 form-group" data-validate="">
                        @Html.TextBox("Avatar", null, new { type = "file", @class = "txt3" })
                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn btn-block" type="submit">
                            Register
                        </button>
                    </div>

                    <div class="flex-sb-m w-full p-b-20 p-t-10">
                        <div>
                            @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "txt1 text-center" })
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="~/Scripts/Login/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/animsition.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/popper.js"></script>
    <script src="~/Scripts/Login/bootstrap.min.js"></script>
    <script src="~/Scripts/Login/jquery.validate.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/moment.js"></script>
    <script src="~/Scripts/Login/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/Login/main.js"></script>
    <script src="~/Scripts/atlantis.min.js"></script>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
</html>
